---
import { ThemeToggle } from '../components-client/ThemeToggle/ThemeToggle'
//console.log('Astro.url', Astro.url)
---

<div class="bg-jgsblue-200 dark:bg-jgsblue-800">
  <div class="container mx-auto">
    <div class="ml-4 mt-1 flex flex-grow items-center align-middle">
      <h1 class="pr-4 text-xl text-white dark:text-gray-900">jgs-technical</h1>
      <div class="flex-grow justify-start">
        <div
          class={`btn btn-link no-animation no-underline hover:no-underline ${Astro.url.pathname?.length > 2 ? 'hover:text-accent' : 'font-bold brightness-150'}`}
        >
          <a href="/">Home</a>
        </div>
        <div
          class={`btn btn-link no-animation no-underline hover:no-underline ${!Astro.url.pathname.startsWith('/contact') ? 'hover:text-accent' : 'font-bold brightness-150'}`}
        >
          <a href="/contact">Contact</a>
        </div>
        <div
          class={`btn btn-link no-animation no-underline dark:text-amber-400 hover:no-underline ${Astro.url.pathname.startsWith('/blog') ? 'hover:text-accent' : ''}`}
        >
          Test
        </div>
      </div>
      <div class="align-end">
        <ThemeToggle client:only="react" />
      </div>
    </div>
  </div>
</div>
